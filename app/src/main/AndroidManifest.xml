        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/Base.Theme.LMTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="LMDelivery.db" />
        <meta-data
            android:name="AA_DB_VERSION"
