<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.LMTheme">
    </style>

    <style name="Base.Theme.LMTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FragmentTitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FragmentSubTitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/sub_title_font_size</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="CardTitle"  parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/card_margin</item>
    </style>

    <style name="CardSubTitle"  parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_sub_title_font_size</item>
    </style>

    <style name="SummaryCardTitle"  parent="android:Widget.TextView">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/window_background</item>
        <item name="android:textSize">@dimen/summary_card_title_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">@dimen/card_margin</item>
        <item name="android:paddingTop">@dimen/card_margin</item>
    </style>

    <style name="SummaryCardContent"  parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/window_background</item>
        <item name="android:textSize">@dimen/summary_card_content_font_size</item>
        <item name="android:paddingTop">@dimen/card_margin</item>
        <item name="android:paddingBottom">@dimen/card_margin</item>
    </style>

    <style name="SummaryCardEdit"  parent="android:Widget.TextView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/window_background</item>
        <item name="android:paddingTop">@dimen/card_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/icon_edit</item>
    </style>

    <style name="Label"  parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="LabelIcon"  parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/label_icon_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_icon_font_size</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <dimen name="label_icon_font_size">22sp</dimen>
    <dimen name="label_icon_width">56dp</dimen>
    <dimen name="label_text_font_size">16sp</dimen>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
</resources>